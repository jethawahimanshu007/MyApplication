<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.himanshu.myapplication.AllRatings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Path, click on a device to rate:"
        android:id="@+id/busStop122"
        android:textSize="25dp"
        android:textColor="#FF4081"
        android:layout_centerHorizontal="true"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source"
        android:id="@+id/nearbyDevices"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:textColor="#FF4081"
        android:layout_centerHorizontal="true"></TextView>

    <ListView
        android:id="@+id/source"
        android:layout_marginTop="100dp"
        android:layout_height="150dp"
        android:textColor="#3F51B5"
        android:layout_width="match_parent">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intermediaries"
        android:id="@+id/otherPl"
        android:textSize="15dp"
        android:layout_marginTop="280dp"
        android:textColor="#FF4081"
        android:layout_centerHorizontal="true"></TextView>

    <ListView
        android:id="@+id/relayList"
        android:layout_marginTop="300dp"
        android:layout_height="150dp"
        android:textColor="#3F51B5"
        android:layout_width="match_parent">
    </ListView>

</RelativeLayout>
