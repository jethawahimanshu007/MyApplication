<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.himanshu.myapplication.RatingsMain"
    android:orientation="vertical"
    android:weightSum="100">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:id="@+id/imageViewReceived"

        android:contentDescription="@string/desc"/>
    <!-- Ratings for tags bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/tagsRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate the tags:"
            />

        <RatingBar
            android:id="@+id/tagsRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="5.0" />

    </LinearLayout>
    <!-- Ratings for cofidence bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/confiRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence on ratings:"
            />

        <RatingBar
            android:id="@+id/confiBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="5.0" />

    </LinearLayout>
    <!--Rating for message quality-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/mesqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate the message quality:"
            />

        <RatingBar
            android:id="@+id/mesquabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="5.0" />

    </LinearLayout>


    <com.example.himanshu.myapplication.FButton
        android:id="@+id/addRatingsButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:text="Add ratings"
        fbutton:buttonColor="@color/fbutton_color_peter_river"
        fbutton:shadowColor="@color/fbutton_color_belize_hole"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"/>



</LinearLayout>